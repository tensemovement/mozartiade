// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  password      String?   // hashed password (null for OAuth users)
  provider      String    @default("email") // "email" or "google"
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Work {
  id                     String   @id @default(cuid())
  catalogNumber          String?  @unique // K. number (e.g., "K.525", "K.297b")
  catalogNumberNumeric   Int?     // Numeric part of K. number (e.g., 525, 297)
  catalogNumberSuffix    String?  // Suffix part of K. number (e.g., "", "a", "b")
  year                   Int
  month                  Int?
  day                    Int?
  compositionOrder       Int?     // Order within the year (1, 2, 3, ...) for precise chronological sorting
  title                  String
  titleEn                String?
  description            String   @db.Text
  genre                  String?
  youtubeUrl             String?
  sheetMusicUrl          String?
  compositionDetails     String?  @db.Text
  highlight              Boolean  @default(false)
  image                  String?
  voteCount              Int      @default(0)

  // Detail page fields
  detailImage            String?
  behindStory            String?  @db.Text
  usageExamples          String[] // Array of usage examples

  // Relations
  movements              Movement[]
  chronicles             Chronicle[] // 이 작품을 참조하는 연대기 항목들

  createdAt              DateTime @default(now())
  updatedAt              DateTime @updatedAt

  @@index([catalogNumber])
  @@index([catalogNumberNumeric, catalogNumberSuffix])
  @@index([genre])
  @@index([year])
  @@index([year, compositionOrder])
}

model Movement {
  id          String   @id @default(cuid())
  workId      String
  order       Int      // Order in the work
  title       String
  titleEn     String?
  character   String?  // Character name
  description String   @db.Text
  youtubeUrl  String?
  duration    String?  // e.g., "4:30"
  highlights  String?  @db.Text

  // Relations
  work        Work     @relation(fields: [workId], references: [id], onDelete: Cascade)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([workId])
  @@index([order])
}

// 모차르트 연대기 - 생애 사건과 작품을 모두 포함하는 타임라인
model Chronicle {
  id          String        @id @default(cuid())
  type        ChronicleType // 'life' (생애 사건) 또는 'work' (작품 작곡)
  year        Int
  month       Int?
  day         Int?

  // 생애 사건 정보 (type='life'일 때만 사용)
  title       String?
  description String?       @db.Text
  location    String?

  // 작품 참조 (type='work'일 때만 사용)
  workId      String?
  work        Work?         @relation(fields: [workId], references: [id], onDelete: Cascade)

  // 공통 필드
  highlight   Boolean       @default(false)
  image       String?

  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  @@index([year])
  @@index([type])
  @@index([year, month, day])
  @@index([workId])
}

enum ChronicleType {
  life // 생애 사건
  work // 작품 작곡
}
